{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "SmartWeb Driver Configuration",
    "description": "MQTT to SamrtWeb gateway configuration",
    "definitions": {
        "sensor_mapping": {
            "type": "object",
            "title": "Sensor",
            "properties": {
                "channel": {
                    "type": "string",
                    "title": "Device Id/Control Id",
                    "minLength": 3,
                    "propertyOrder": 1
                },
                "value_timeout_min": {
                    "type": "integer",
                    "title": "Value timeout, minutes (\"-1\" - without timeout)",
                    "default": -1,
                    "propertyOrder": 2
                },
                "sensor_index": {
                    "type": "integer",
                    "title": "Sensor index",
                    "minimum": 1,
                    "maximum": 32,
                    "propertyOrder": 3
                }
            },
            "required": ["channel", "sensor_index"]
        },
        "param_mapping": {
            "type": "object",
            "title": "Parameter",
            "properties": {
                "channel": {
                    "type": "string",
                    "title": "Device Id/Control Id",
                    "minLength": 3,
                    "propertyOrder": 1
                },
                "value_timeout_min": {
                    "type": "integer",
                    "title": "Value timeout, minutes (\"-1\" - without timeout)",
                    "default": -1,
                    "propertyOrder": 2
                },
                "program_type": {
                    "type": "integer",
                    "title": "Program type",
                    "minimum": 0,
                    "maximum": 255,
                    "propertyOrder": 3
                },
                "parameter_id": {
                    "type": "integer",
                    "title": "Parameter id",
                    "minimum": 0,
                    "maximum": 255,
                    "propertyOrder": 4
                },
                "parameter_index": {
                    "type": "integer",
                    "title": "Parameter index",
                    "minimum": 0,
                    "maximum": 255,
                    "propertyOrder": 5
                }
            },
            "required": [
                "channel",
                "parameter_id",
                "program_type",
                "parameter_index"
            ]
        },
        "controller": {
            "type": "object",
            "title": "Virtual SmartWeb controller",
            "headerTemplate": "Virtual SmartWeb controller {{self.controller_id}}",
            "properties": {
                "controller_id": {
                    "type": "integer",
                    "title": "Controller id",
                    "default": 1,
                    "minimum": 1,
                    "maximum": 255,
                    "propertyOrder": 1
                },
                "sensors": {
                    "type": "array",
                    "title": "Sensors",
                    "items": { "$ref": "#/definitions/sensor_mapping" },
                    "_format": "table",
                    "propertyOrder": 2,
                    "options": {
                        "disable_array_reorder": true
                    }
                },
                "parameters": {
                    "type": "array",
                    "title": "Parameters",
                    "items": { "$ref": "#/definitions/param_mapping" },
                    "_format": "table",
                    "propertyOrder": 4,
                    "options": {
                        "disable_array_reorder": true
                    }
                }
            },
            "required": ["controller_id"],
            "defaultParameters": ["controller_id", "sensors"],
            "options": {
                "disable_collapse": true,
                "disable_edit_json": true
            }
        }
    },
    "properties": {
        "debug": {
            "type": "boolean",
            "title": "Enable debug logging",
            "default": false,
            "_format": "checkbox",
            "propertyOrder": 1
        },
        "poll_interval_ms": {
            "type": "integer",
            "title": "Polling interval of SmartWeb programs, ms",
            "default": 1000,
            "minimum": 1,
            "propertyOrder": 2
        },
        "controllers": {
            "type": "array",
            "title": "Virtual SmartWeb controllers",
            "items": { "$ref": "#/definitions/controller" },
            "_format": "tabs",
            "propertyOrder": 3,
            "options": {
                "disable_collapse": true
            }
        }
    },
    "defaultProperties": ["poll_interval_ms", "controllers"],
    "options": {
        "disable_collapse": true
    },
    "configFile": {
        "path": "/etc/wb-mqtt-smartweb.conf",
        "service": "wb-mqtt-smartweb"
    },

    "translations": {
        "en": {},
        "ru": {
            "SmartWeb Driver Configuration": "Шлюз MQTT - SmartWeb",
            "MQTT to SamrtWeb gateway configuration": "Конфигурация шлюза MQTT - SmartWeb",
            "Device Id/Control Id": "Устройство/Канал",
            "Value timeout, minutes (\"-1\" - without timeout)": "Таймаут (минуты) (\"-1\" - без таймаута)",
            "Sensor index": "Номер датчика",
            "Parameter": "Параметр",
            "Program type": "Тип программы",
            "Parameter id": "ID параметра",
            "Parameter index": "Номер параметра",
            "Virtual SmartWeb controller": "Контроллер SmartWeb",
            "Sensor": "Датчик",
            "Sensors": "Датчики",
            "Parameters": "Параметры",
            "Enable debug logging": "Включить отладочные сообщения",
            "Polling interval of SmartWeb programs, ms": "Интервал опроса программ SmartWeb (мс)",
            "Virtual SmartWeb controllers": "Виртуальные контроллеры SmartWeb",
            "Controller id": "ID контроллера",
            "Virtual SmartWeb controller {{self.controller_id}}": "Контроллер SmartWeb {{self.controller_id}}"
        }
    }
}
